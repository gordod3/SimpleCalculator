<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="Result"
        android:textSize="70sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/clear"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/seven"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/eight"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/nine"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/plus"
            android:layout_weight="1"
            android:onClick="onOperationClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/four"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/five"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/six"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/minus"
            android:layout_weight="1"
            android:onClick="onOperationClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/one"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/two"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/three"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:onClick="onOperationClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="*"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dot"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="."
            android:textSize="30sp"/>
        <Button
            android:id="@+id/zero"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/equal"
            android:layout_weight="1"
            android:onClick="onOperationClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="="
            android:textSize="30sp"/>
        <Button
            android:id="@+id/divide"
            android:layout_weight="1"
            android:onClick="onOperationClick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="/"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>